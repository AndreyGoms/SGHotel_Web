@using SGHotel.Enums
@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="text-center">

    <h1 class="display-4">Editar Cliente</h1> 

</div>

<form asp-controller="Cliente" asp-action="Alterar" method="post">
 
  <input type="hidden" asp-for="Id"/> 
    
   <div class="form-group">
    <label for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o Nome do cliente">    
    @Html.ValidationMessageFor(x => x.Nome)
  </div>

  <div class="form-group">
    <label for="Cpf">Cpf</label>
    <input type="text" asp-for="Cpf" class="form-control" placeholder="Digite o Cpf do cliente">    
    @Html.ValidationMessageFor(x => x.Cpf)
  </div>

  <div class="form-check">
    <input class="form-check-input" asp-for="Status" type="radio" name="flexRadioDefault" id="flexRadioInativo"  value="false">
    <label class="form-check-label" for="flexRadioDefault1">
         Inativo
    </label>
  </div>
    <div class="form-check">
        <input class="form-check-input" asp-for="Status" type="radio" name="flexRadioDefault" id="flexRadioAtivo" value="true">
        <label class="form-check-label" for="flexRadioDefault2">
            Ativo
        </label>
    </div> 

  <br />
  
  <button type="submit" id="btnSalvarEdicao" class="btn btn-primary btn-block">Alterar</button>
  <a class="btn btn-secondary btn-block" asp-controller="Cliente" asp-action="index" role="button" >Voltar</a>
</form>