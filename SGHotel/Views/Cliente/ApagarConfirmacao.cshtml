@model ClienteModel
@{
    ViewData["Title"] = "Confirmação de apagar o Cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o usuário (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary btn-block" asp-controller="Cliente" asp-action="Index" role="button">Cancelar exclusão</a>
<a class="btn btn-danger btn-block"  asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id" role="button" >Confirmar exclusão</a>
