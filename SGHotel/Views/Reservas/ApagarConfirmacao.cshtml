@model SGHotel.Models.ReservasModel
@{
    ViewData["Title"] = "Confirmação de apagar o Usuario";
}

<div class="text-center">
    <h1>ATENÇÃO</h1>
    <label> Caso <strong>SIM</strong>, esse registro será apagado e a conta referente a ela será Cancelada!</label>
</div>
<div>
    <h2>Dados da reserva</h2>
    <label>Data da Inicio: @Model.dt_inicio</label>
    <label>Data da Saída : @Model.dt_fim</label>
    <label>cliente       : @Model.id_cliente</label>
    <label>Valor pago    : @Model.Valor_pago</label>
</div>

<a class="btn btn-primary btn-block" asp-controller="Usuario" asp-action="Index" role="button">Voltar</a>
<a class="btn btn-danger btn-block"  asp-controller="Usuario" asp-action="Apagar" asp-route-id="" role="button">Confirmar</a>
