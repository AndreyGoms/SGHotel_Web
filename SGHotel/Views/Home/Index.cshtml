@{
    ViewData["Title"] = "Home Page";
}


<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.6s;
  width: 30%;
  display:inline-flex;
  margin-top:30px;
      background-color:green;
    color:white;
}

#teste-text {
    text-decoration:none;
    color:inherit; 
}

#teste-cor{
    background-color:red;
    color:white;
}

.card:hover {
  box-shadow: 10px 10px 0px 0 rgba(0,0,0,.2);  
}

.container {
  padding: 2px 16px;
}
</style>


<div class="container overflow-hidden text-center">
  <div class="row gx-5">
    <div class="col">
         <div id="direita" class="text-left">
            <h1 class="display-4">Visão Geral</h1>
        </div>
    </div>
    <div class="col" style="display:flow; margin-top:27px">           
            <a role="button" class="btn btn-primary" style="margin-left:-30px" asp-controller="Quarto" asp-action="Criar" >Novo Quarto</a>
            
            <div class="form-check form-switch" style="display:inline-flex; margin-left:20px; margin-right:30px">
                 <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Apenas Livres</label>
            </div>            

            <div style="display:inline-flex">                
                <input type="search" style="width:150px" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon" />
                <button class="btn btn-primary" type="submit">Pesquisar</button>
            </div>
    </div>
  </div>

<div class="conteiner">
      <div class="card" style="width: 18rem;" >
         <a id="teste-text" class="card-body" asp-controller="Quarto" asp-action="Criar" >
             <h5 class="card-title"> 101 </h5>    
         </a>
      </div> 
      
      <div class="card" style="width: 18rem;" >
         <div class="card-body">
             <h5 class="card-title"> 102 </h5>    
         </div>
      </div>

      @*cor vermelha*@
      <div class="card" id="teste-cor" style="width: 18rem;" >
         <div class="card-body">
             <h5 class="card-title"> 103 </h5>    
         </div>
      </div> 

      <br />

      <div class="card" style="width: 18rem;" >
         <div class="card-body">
             <h5 class="card-title"> 201 </h5>    
         </div>
      </div> 
      
      <div class="card" style="width: 18rem;" >
         <div class="card-body">
             <h5 class="card-title"> 202 </h5>    
         </div>
      </div>
</div>


</div>